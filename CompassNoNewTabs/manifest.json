{
  "manifest_version": 3,
  "name": "CompassNoNewTabs",
  "version": "1.0.0",
  "description": "Provides QoL changes to how Compass handles links.",
  "author": "Your Name",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.compass.education/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle CompassNoNewTabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.compass.education/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "minimum_edge_version": "88.0.705.50"
}